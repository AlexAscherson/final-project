<p id="notice"><%= notice %></p>

<h1>Listing Event Groups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Creator</th>
      <th>Group description</th>
      <th>Imageurl</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @event_groups.each do |event_group| %>
      <tr>
        <td><%= event_group.name %></td>
        <td><%= event_group.creator_id %></td>
        <td><%= event_group.group_description %></td>
        <td><%= event_group.imageurl %></td>
        <td><%= link_to 'Show', event_group %></td>
        <td><%= link_to 'Edit', edit_event_group_path(event_group) %></td>
        <td><%= link_to 'Destroy', event_group, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

