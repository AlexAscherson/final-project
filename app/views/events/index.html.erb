<p id="notice"><%= notice %></p>

<h1>Listing Events</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Host</th>
      <th>Event description</th>
      <th>Imageurl</th>
      <th>User</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Group</th>
      <th>Tournament</th>
      <th>Location</th>
      <th>Outcome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.host_id %></td>
        <td><%= event.event_description %></td>
        <td><%= event.imageurl %></td>
        <td><%= event.user_id %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.group_id %></td>
        <td><%= event.tournament_id %></td>
        <td><%= event.location %></td>
        <td><%= event.outcome %></td>
        <td><%= link_to 'Show', group_tournament_event_path(@group, @tournament, event) %></td>
        <td><%= link_to 'Edit', edit_group_tournament_event_path(@group, @tournament, event) %></td>
        <td><%= link_to 'Destroy', group_tournament_event_path(@group, @tournament, event), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

