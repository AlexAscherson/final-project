<p>
  <strong>Event:</strong>
  <%= @event.name %>
</p>

<p>
<strong>Status:</strong>
<% if @event.start_date.present? %>
  <% if @event.start_date.past? %>
    <%= 'Event has finished' %>
    <% else %>
    <%= 'Event is coming up' %>
    <% end %>
  <% else %>
  <%= 'Event has not date' %>
  <% end %>

</p>

<p>
  <strong>Host:</strong>
  <% host = User.find(@event.host_id).name %> 
  <%= host %>
</p>

<p>
  <strong>Event description:</strong>
  <%= @event.event_description %>


</p>

<p>


<p>
  <strong>Start date:</strong>
  <%= @event.start_date.to_date %>
</p>

<!-- <p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p> -->



<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<!-- <p>
  <strong>Outcome:</strong>
  <%= @event.outcome %>
</p> -->

   <div class="eventactive">
              <% ratings = @event.rates("Rating").count %>
              <% users = @event.users.count %>

              <% if ratings == users %>
              Event complete! All users have voted
               <% @event.outcome = 1 %>
               <% @event.save %>

              <% else %>
              Waiting for guests to finish voting
              <% end %>
              </div>






<p>
<div class="staravg">
Current Rating: <%= rating_for @event, "Rating", stars:10, enable_half: true, disable_after_rate: true, imdb_avg: true  %>
</div>
</p>



