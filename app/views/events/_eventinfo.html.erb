<div class="row">
  <div class="span9">
    
      <h3>Event:
      <%= @event.name %></h3>
   
    <div class="row">
      <div class="col-md-4">
       
        <strong>Status:</strong>
        <% if @event.start_date.present? %>
          <% if @event.start_date.past? %>
            <%= 'Event has finished' %>
            <% else %>
            <%= 'Event is coming up' %>
            <% end %>
          <% else %>
          <%= 'Event has not date' %>
          <% end %>

        
      </div>
      <div class="col-md-2">
       
        <strong>Host:</strong>
        <% host = User.find(@event.host_id).name %> 
        <%= host %>

   
      
       
      </div>

      <div class="col-md-2">

        <strong>Date:</strong>
        <%= @event.start_date.to_date %>

      </div>

    </div>
  </div>
</div>









<div class="eventinfo">
<p>
  <strong>Event description:</strong>
  <%= @event.event_description %>


</p>

<p>




<!-- <p>
  <strong>End date:</strong>
  <%= @event.end_date %>
</p> -->



<p>
  <strong>Location:</strong>
  <%= @event.location %>
</p>

<!-- <p>
  <strong>Outcome:</strong>
  <%= @event.outcome %>
</p> -->

   <div class="eventactive">
              <% ratings = @event.rates("Rating").count %>
              <% users = @event.users.count %>

              <% if ratings == users %>
              Event complete! All users have voted
               <% @event.outcome = 1 %>
               <% @event.save %>

              <% else %>
              Waiting for guests to finish voting
              <% end %>
              </div>






<p>
<div class="staravg">
Rating: <%= rating_for @event, "Rating", stars:10, enable_half: true, disable_after_rate: true, imdb_avg: true  %>
</div>
</p>



<td><%= link_to 'Edit', edit_group_tournament_event_path(@group, @tournament, @event) %></td>

<td><%= link_to 'Destroy', group_tournament_event_path(@group, @tournament, @event), method: :delete, data: { confirm: 'Are you sure?' } %></td>

</div>
