<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @group.name %>
</p>

<p>
  <strong>Creator:</strong>
  <%= @group.creator_id %>
</p>

<p>
  <strong>Group description:</strong>
  <%= @group.group_description %>
</p>

<p>
  <strong>Imageurl:</strong>
  <%= @group.imageurl %>
</p>

<p>
  <strong>Users:</strong>
  <%= @group.user_id %>
